<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="applications.apps.celsoft.com.showoff.Views.SportFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/tools"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="2dp"
        android:layout_marginBottom="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >


            <LinearLayout
                android:id="@+id/layoutaccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"

                android:background="@drawable/roundlayout"
                android:orientation="vertical"
                android:padding="6dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/txt_events1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"


                        android:padding="1dp"
                        android:text="Account"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/text_color"
                        android:textStyle="bold"
                        android:textSize="19dp" />

                </LinearLayout>

            </LinearLayout>
            <View
                android:id="@+id/views1"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="2dp"
                android:background="#CCC" />



            <LinearLayout
                android:id="@+id/layout_favorites"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"

                android:background="@drawable/roundlayout"
                android:orientation="vertical"
                android:padding="6dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/txt_events5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"


                        android:padding="1dp"
                        android:text="Collections"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/text_color"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>
            <View
                android:id="@+id/views3"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="2dp"
                android:background="#CCC" />


            <LinearLayout
                android:id="@+id/layout_notification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"

                android:background="@drawable/roundlayout"
                android:orientation="vertical"
                android:padding="6dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/txt_events"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"


                        android:padding="1dp"
                        android:text="Notifications"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/text_color"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>
            <View
                android:id="@+id/views2"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="2dp"
                android:background="#CCC" />

            <LinearLayout
                android:id="@+id/layoutfacebook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"

                android:background="@drawable/roundlayout"
                android:orientation="vertical"
                android:padding="6dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/txt_fblike"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"


                        android:padding="1dp"
                        android:text="Like Us on Facebook"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/text_color"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>
            <View
                android:id="@+id/viewsinsta"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical"

                android:background="#CCC" />

            <LinearLayout
                android:id="@+id/layoutinsta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"

                android:background="@drawable/roundlayout"
                android:orientation="vertical"
                android:padding="6dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/txt_follow_instagram"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"


                        android:padding="1dp"
                        android:text="Follow Us on Intsagram"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/text_color"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>
            <View
                android:id="@+id/views22"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical"

                android:background="#CCC" />

            <LinearLayout
                android:id="@+id/layouttwitter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"

                android:background="@drawable/roundlayout"
                android:orientation="vertical"
                android:padding="6dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/txt_twitter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"


                        android:padding="1dp"
                        android:text="Follow Us on Twitter"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/text_color"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>
            <View
                android:id="@+id/views_abs"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical"

                android:background="#CCC" />
            <LinearLayout
                android:id="@+id/layout_FAQs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/roundlayout"
                android:orientation="vertical"
                android:padding="6dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/txt_faqs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="1dp"
                        android:text="Frequently Asked Questions"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/text_color"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>



            <View
                android:id="@+id/views12"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical"

                android:background="#CCC" />

            <LinearLayout
                android:id="@+id/layout_terms_policy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/roundlayout"
                android:orientation="vertical"
                android:padding="6dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="1dp"
                        android:text="Terms &amp; Privacy Policy"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/text_color"
                        android:textStyle="bold" />
                </LinearLayout>


            </LinearLayout>


            <View
                android:id="@+id/views_abt"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical"

                android:background="#CCC" />
            <LinearLayout
                android:id="@+id/layout_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/roundlayout"
                android:orientation="vertical"
                android:padding="6dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/txt_showoff"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="1dp"
                        android:text="About ShowOff"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/text_color"
                        android:textStyle="bold" />
                </LinearLayout>


            </LinearLayout>

            <Button
                android:layout_width="146dp"
                android:layout_height="wrap_content"
                android:text="Log out"
                android:id="@+id/btnlogout"
                android:background="#e74c3c"
                android:textColor="#FFF"
                android:textSize="15sp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="4dp"
                android:layout_gravity="right" />


        </LinearLayout>
        </android.support.v7.widget.CardView>
</FrameLayout>
